{
  "compilerOptions": {
      "module": "system",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./assets",
      "rootDir": "./src",  
      "sourceMap": true,
  },
  "include": [
      "src/**/*",
      "*.ts"
  ],
  "exclude": [
      "node_modules",
      "assets"
  ]
}